{
  "name": "resume",
  "version": "1.0.0",
  "description": "This is my resume project",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:annakowalczuk/resume-project.git"
  },
  "homepage": "https://annakowalczuk.github.io/resume-project/",
  "scripts": {
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp src/images src/sass src/css src/vendor src/scripts",
    "init:files": "touch README.md src/index.html src/sass/style.scss src/scripts/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "watch": "npm run build && npm-run-all -p watch:*",
    "watch:html": "onchange \"src/**/*.html\" -- npm run copy:html",
    "watch:images": "onchange \"src/images/**/*\" -- npm run copy:images",
    "watch:scripts": "onchange \"src/scripts/**/*\" -- npm run copy:scripts",
    "watch:webfonts": "onchange \"src/webfonts/**/*\" -- npm run copy:webfonts",
    "watch:sass": "node-sass src/sass/*.scss --source-map true -w -o dist/css",
    "watch:browsersync": "browser-sync start --server dist --files ./",
    "clean": "rimraf dist",
    "copy:html": "rimraf dist/**/*.html && cpy \"**/*.html\" \"../dist\" --cwd=src --parents",
    "copy:scripts": "rimraf dist/scripts && cpy \"**/*\" \"../../dist/scripts\" --cwd=src/scripts --parents",
    "copy:webfonts": "rimraf dist/webfonts && cpy \"**/*\" \"../../dist/webfonts\" --cwd=src/webfonts --parents",
    "copy:vendor": "rimraf dist/vendor && cpy \"**/*\" \"../../dist/vendor\" --cwd=src/vendor --parents",
    "copy:images": "rimraf dist/images && cpy \"**/*\" \"../../dist/images\" --cwd=src/images --parents",
    "build": "npm-run-all clean copy:* build:*",
    "build:sass": "node-sass src/sass/style.scss --output-style compressed -o dist/css",
    "build:print": "node-sass src/sass/print.scss --output-style compressed -o dist/css",
    "start": "npm-run-all -p start:*",
    "start:sass": "node-sass src/sass/*.scss --source-map true -w -o src/css",
    "start:browsersync": "browser-sync start --server src --files ./ --logLevel debug",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [],
  "author": "Anna Kowalczuk",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "cpy-cli": "^2.0.0",
    "gh-pages": "^2.0.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^4.1.0",
    "rimraf": "^2.6.3"
  },
  "dependencies": {}
}
